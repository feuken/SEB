<div class="modal fade blue" tabindex="-1" role="dialog" id="breweryModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" v-if="!!currentEntity">
            <div class="modal-header">
                <h5 class="modal-title">{{currentEntity.name}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="list-group">
                    <li class="list-group-item"><i class="fas fa-beer"></i> {{currentEntity.breweryType}}</li>
                    <li class="list-group-item"><i class="fas fa-home"></i> {{currentEntity.street}}, {{currentEntity.city}}, {{currentEntity.state}} {{currentEntity.postalCode}}</li>
                    <li class="list-group-item"><i class="fas fa-phone"></i> {{currentEntity.phoneNumber}}</li>
                    <li class="list-group-item"><i class="fas fa-window-maximize"></i> {{currentEntity.websiteUrl}}</li>
                </ul>
            </div>
        </div>
    </div>
</div>